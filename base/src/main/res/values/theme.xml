<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:windowBackground">@color/white</item>
    <item name="android:actionBarStyle">@style/BaseActionBar</item>
    <item name="android:actionMenuTextColor">@color/toolbar_text</item>
    <item name="colorPrimary">@color/theme</item>
    <item name="colorPrimaryDark">@color/dark_theme</item>
    <item name="colorAccent">@color/red</item>
    <item name="android:textColorPrimary">@color/black</item>
    <item name="android:textColorSecondary">@color/grey600</item>
    <item name="colorControlNormal">@color/grey200</item>
    <item name="colorControlActivated">@color/theme</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="colorButtonNormal">@color/theme</item>
    <item name="android:dialogTheme">@style/DialogTheme</item>
    <item name="android:alertDialogTheme">@style/DialogTheme</item>
    <item name="android:alertDialogStyle">@style/DialogTheme</item>
    <item name="android:textColorLink">@color/theme</item>
    <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/theme</item>
    <!-- support library compatibility -->
    <item name="actionBarTheme">@style/BaseActionBarTheme</item>
    <item name="actionBarStyle">@style/BaseActionBar</item>
    <item name="actionMenuTextColor">@color/toolbar_text</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorAccent">@color/white_alpha_95</item>
    <!-- Color Arrays -->
    <item name="colorsProgressBar">@array/progressBarColors</item>
  </style>

  <style name="AppTheme.NoActionBar.Transparent">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorAccent">@color/red</item>
    <!-- Color Arrays -->
    <item name="colorsProgressBar">@array/progressBarColors</item>
  </style>

  <style name="AppTheme.Transparent">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
  </style>

  <style name="AppTheme.Transparent.FullScreen">
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/theme</item>
  </style>

  <style name="BaseActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
    <item name="colorControlNormal">@color/toolbar_text</item>
  </style>
